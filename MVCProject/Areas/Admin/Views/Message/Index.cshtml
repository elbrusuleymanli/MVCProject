
@model List<LeaveReply>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Message List</h4>
                       
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>

                                        <th>
                                            Name
                                        </th>
                                        <th>
                                           Email
                                        </th>
                                       
                                        <th>
                                            Subject
                                        </th>
                                        <th>
                                           Text
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var message in Model)
                                    {
                                        <tr class="table-success">

                                            
                                            <td>
                                                @message.Name
                                            </td>
                                            <td>
                                                @message.Email
                                            </td>
                                            <td>
                                                @message.Subject
                                            </td>
                                            <td  >
                                                <textarea cols="50" rows="10">
                                               @message.Text 
                                                    </textarea>
                                               
                                            </td>
                                            <td>


                                              <a  mt-2 onclick="return confirm('Are you sure?');" asp-controller="Message" asp-action="Delete" asp-route-id="@message.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>