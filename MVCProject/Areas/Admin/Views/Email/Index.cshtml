
@model List<Emails>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Subscribes</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>

                                        <th>
                                            Email adress
                                        </th>
                                        
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var message in Model)
                                    {
                                        <tr class="table-success">


                                         
                                            <td>
                                                @message.Email
                                            </td>
                                           
                                           
                                            <td>

                                                <a mt-2 class="btn btn-primary" href="https://mail.google.com/mail/u/0/?tab=om#inbox?compose=new">Answer</a>
                                                <a mt-2 class="btn btn-danger"  onclick="return confirm('Are you sure?');" asp-controller="Email" asp-action="Delete" asp-route-id="@message.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>