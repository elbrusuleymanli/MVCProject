@model Slider
@{
    ViewData["Title"] = "Detail";
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-4 grid-margin grid-margin-md-0 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 style="color:blue">SLIDER</h2>

                        <h4 class="card-title"><img src="~/img/slider/@Model.Image" style="width:300px; height:220px" /></h4>

                        <ul class="list-star">
                            <li><span style="color:blue">TitleUp:</span>  @Model.TitleUp</li>
                            <li><span style="color:blue">TitleDown: </span>  @Model.TitleDown</li>
                            <li><span style="color:blue">Description:</span>  @Model.Desciption</li>
                            <li><span style="color:blue">Button:</span>  @Model.Button</li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
