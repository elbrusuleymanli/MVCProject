
@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Slider table</h4>
                        <a class="btn btn-success mt-2 " asp-controller="Slider" asp-action="Create">Create new slider</a>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>

                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            First Title
                                        </th>
                                        <th>
                                            Second Title
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Button
                                        </th>
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var slider in Model)
                                    {
                                        <tr class="table-success">

                                            <td>
                                                <img src="~/img/slider/@slider.Image" style="width:300px; height:300px" />
                                            </td>
                                            <td>
                                                @slider.TitleUp
                                            </td>
                                            <td>
                                                @slider.TitleDown
                                            </td>
                                            <td>
                                                @slider.Desciption
                                            </td>
                                            <td>
                                                @slider.Button
                                            </td>
                                            <td>


                                                <a class="btn btn-warning mt-2" asp-controller="Slider" asp-action="Update" asp-route-id="@slider.Id">Update</a>

                                                <a class="btn btn-primary mt-2" asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id">Detail</a>

                                                <a class="btn btn-danger mt-2" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

