
@model EventDetailCard

@{
    ViewData["Title"] = "Delete";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-4 grid-margin grid-margin-md-0 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 style="color:blue">Delete card</h2>

                        <h4 class="card-title"><img src="~/img/event/@Model.Image" style="width:300px; height:220px" /></h4>

                        <ul class="list-star">
                            <li><span style="color:blue">Title:</span>  @Model.Descr</li>
                            <li><span style="color:blue"> Date:</span>  @Model.StartDate.ToString("dd")</li>
                            <li><span style="color:blue">Month:</span>  @Model.StartDate.ToString("MMM")</li>
                            <li><span style="color:blue">Start Time:</span> @Model.StartDate.ToString("H:mm")</li>
                            <li><span style="color:blue">End Time:</span>  @Model.EndDate.ToString("H:mm")</li>
                            <li><span style="color:blue">Button:</span>  @Model.City</li>

                        </ul>

                        <form method="post"><button class="btn btn-danger mb-2"onclick="return confirm('Are you sure?');">Delete</button></form>

                        <a class="btn btn-primary" asp-action="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


