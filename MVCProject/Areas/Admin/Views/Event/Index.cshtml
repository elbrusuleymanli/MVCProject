@model List<EventDetailCard>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Event Cards</h4>
                        <a class="btn btn-success mt-2 " asp-controller="Event" asp-action="Create">Create new card</a>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>

                                        <th>
                                            Image
                                        </th>

                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Date
                                        </th>
                                        <th>
                                            Month
                                        </th>
                                        <th>
                                            Start Time
                                        </th>
                                        <th>
                                            End Time
                                        </th>
                                        <th>
                                            City
                                        </th>
                                        <th>
                                            Adress
                                        </th>

                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var card in Model)
                                    {
                                    <tr class="table-success">

                                        <td>
                                            <img src="~/img/event/@card.Image" style="width:300px; height:300px" />
                                        </td>
                                        <td>
                                            @card.Descr
                                        </td>
                                        <td>
                                            @card.StartDate.ToString("dd")
                                        </td>
                                        <td>
                                            @card.StartDate.ToString("MMM")
                                        </td>
                                        <td>
                                            @card.StartDate.ToString("H:mm")
                                        </td>
                                        <td>
                                            @card.EndDate.ToString("H:mm")
                                        </td>
                                        <td>
                                            @card.City
                                        </td>
                                        <td>
                                            @card.Adress
                                        </td>
                                        <td>


                                            <a class="btn btn-warning mt-2" asp-controller="Event" asp-action="Update" asp-route-id="@card.Id">Update</a>
                                            <br />
                                            <a class="btn btn-primary mt-2" asp-controller="Event" asp-action="Detail" asp-route-id="@card.Id">Detail</a>
                                            <br />
                                            <a class="btn btn-danger mt-2" asp-controller="Event" asp-action="Delete" asp-route-id="@card.Id">Delete</a>
                                        </td>
                                    </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




