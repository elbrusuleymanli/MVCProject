
@model List<TeacherCard>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Teacher Cards</h4>
                        <a class="btn btn-success mt-2 " asp-controller="Teacher" asp-action="Create">Create new card</a>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>

                                        <th>
                                            Image
                                        </th>
                                        <th>
                                           Fullname
                                        </th>
                                        <th>
                                            Position
                                        </th>
                                        <th>
                                           Sosial Media
                                        </th>
                                        <th>
                                            Sosial Media
                                        </th>
                                        <th>
                                            Sosial Media
                                        </th>
                                        <th>
                                            Sosial Media
                                        </th>

                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var card in Model)
                                    {
                                    <tr class="table-success">

                                        <td>
                                            <img src="~/img/teacher/@card.Image" style="width:300px; height:300px" />
                                        </td>
                                        <td>
                                            @card.Name
                                        </td>
                                        <td>
                                            @card.Position
                                        </td>
                                        <td>
                                            @Html.Raw(card.Facebook)
                                        </td>
                                        <td>
                                            @Html.Raw(card.Vimeo)
                                        </td>
                                        <td>
                                            @Html.Raw(card.Pinterest)
                                        </td>
                                        <td>
                                            @Html.Raw(card.Twitter)
                                        </td>

                                        <td>


                                            <a class="btn btn-warning mt-2" asp-controller="Teacher" asp-action="Update" asp-route-id="@card.Id">Update</a>
                                            <br />
                                            <a class="btn btn-primary mt-2" asp-controller="Teacher" asp-action="Detail" asp-route-id="@card.Id">Detail</a>
                                            <br />
                                            <a class="btn btn-danger mt-2" asp-controller="Teacher" asp-action="Delete" asp-route-id="@card.Id">Delete</a>
                                        </td>
                                    </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




