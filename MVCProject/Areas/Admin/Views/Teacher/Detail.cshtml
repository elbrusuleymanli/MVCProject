
@model TeacherCard
@{
    ViewData["Title"] = "Detail";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-4 grid-margin grid-margin-md-0 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 style="color:blue">Teacher Card</h2>

                        <h4 class="card-title"><img src="~/img/teacher/@Model.Image" style="width:300px; height:220px" /></h4>

                        <ul class="list-star">
                            <li><span style="color:blue">Name:</span>  @Model.Name</li>
                            <li><span style="color:blue">Position: </span>  @Model.Position</li>
                            <li><span style="color:blue">Facebook: </span>  @Model.Facebook</li>
                            <li><span style="color:blue">Vimeo: </span>  @Model.Vimeo</li>
                            <li><span style="color:blue">Pinterest: </span>  @Model.Pinterest</li>
                            <li><span style="color:blue">Twitter:</span>  @Model.Twitter</li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
