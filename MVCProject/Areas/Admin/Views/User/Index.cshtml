
@model List<UserVM>
@{
    ViewData["Title"] = "Index";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">User List</h4>
                      
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>

                                        <th>
                                            Fullname
                                        </th>
                                        <th>
                                           Username
                                        </th>
                                        <th>
                                           Email
                                        </th>
                                        <th>
                                            Roles
                                        </th>
                                       
                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr class="table-success">

                                            <td>
                                                @user.Fullname
                                            </td>
                                            <td>
                                                @user.Username
                                            </td>
                                            <td>
                                                @user.Email
                                            </td>
                                            <td>
                                                @user.Roles
                                            </td>

                                            <td>


                                                <a class="btn btn-success mt-2" asp-controller="User" asp-action="GetRoles" asp-route-id="@user.Id">Manage Role</a>

                                                <a class="btn btn-warning mt-2" asp-controller="User" asp-action="ChangePassword" asp-route-id="@user.Id">Change Password</a>

                                                <a class="btn btn-danger mt-2" asp-controller="User" asp-action="ToggleBlock" asp-route-id="@user.Id">
                                                    @if (user.IsActive)
                                                    {
                                                        <p style="margin:-3px">Unblock User</p>
                                                    }

                                                    else
                                                    {
                                                        <p style="margin:-3px">Block User</p>
                                                    }
                                                </a>

                                </td>
                                </tr>
                                }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>