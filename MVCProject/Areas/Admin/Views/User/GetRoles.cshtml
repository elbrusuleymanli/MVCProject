
@model List<string>
@{
    ViewData["Title"] = "GetRoles";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 stretch-card">
                <div class="card">
                   
                    <div class="card-body">
                        <h4 class="card-title text-danger"> @ViewBag.Fullname</h4>

                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>

                                     
                                        <th>
                                            Roles
                                        </th>

                                        <th>
                                            Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var roleName in Model)
                                    {
                                        <tr class="table-success">

                                            <td>
                                                @roleName
                                            </td>

                                            <td>
                                       <a class="btn btn-danger mt-2" asp-controller="User" asp-action="RemoveRole" asp-route-id="@ViewBag.UserId" asp-route-roleName="@roleName">Remove Role</a>
                                       <a class="btn btn-primary mt-2" asp-controller="User" asp-action="AddRoles" asp-route-id="@ViewBag.UserId">Add Role</a>

                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



