@model CourseVM
@{
    ViewData["Title"] = "Index";
}
@section BgImage {

    @foreach (var banner in Model.CourseBanners)
    {
        <style>
            .banner-area {
                background: url('../img/banner/@banner.Image') !important;
        </style>
    }
}
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form id="search" action="#">
                        <input type="search" placeholder="Search..." name="search" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.CourseCards)
            {
                <div class="col-lg-4 col-md-6">

                    <div class="single-course mb-70">
                        <div class="course-img">
                            <a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id">
                                <img src="~/img/course/@item.Image" alt="course">
                                <div class="course-hover">
                                    @Html.Raw(item.Link)
                                </div>
                            </a>
                        </div>
                        <div class="course-content">
                            <h3><a href="course-details.html">@item.Title</a></h3>
                            <p>@item.Desc </p>
                            <a class="default-btn"  asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id">@item.Button</a>
                        </div>
                    </div> 
                </div>
            }


            </div>
    </div>
</div>
<!-- Course End -->
