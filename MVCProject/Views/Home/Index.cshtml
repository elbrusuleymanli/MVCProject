@model HomeVM
@{
    Layout = "";
}
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Eduhome - Educational HTML Template</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.png">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/animate.min.css">
    <link rel="stylesheet" href="~/css/meanmenu.css">
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/et-line-icon.css">
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/ionicons.min.css">
    <link rel="stylesheet" href="~/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/responsive.css">
    
    <script src="~/js/vendor/modernizr-3.11.2.min.js"></script>
</head>
<body>



    @{
        ViewData["Title"] = "Main Page";
    }
    @section styles {

        @foreach (var choose in Model.WhyChooses)
        {
            <style>


                .choose-area:before {
                    background: url('../img/choose/@choose.PersonImage') !important;
            </style>
        }
    }
    <!-- Header Area Start -->
    <header class="top">
        <div class="header-area header-sticky fixed">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="logo">
                            <a asp-controller="Home" asp-action="Index"><img src="~/img/logo/logo.png" alt="eduhome" /></a>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="content-wrapper one">
                            <!-- Main Menu Start -->
                            <div class="main-menu one text-end">
                                <nav>
                                    <ul>
                                        <li>
                                            <a href="https://localhost:44398/Home/Index">Home</a>

                                        </li>
                                        <li><a href="https://localhost:44398/About/Index">About</a></li>
                                        <li>
                                            <a href="https://localhost:44398/Course/Index">courses</a>
                                           
                                        </li>
                                        <li>
                                            <a href="https://localhost:44398/Event/Index">event</a>
                                           
                                        </li>
                                        <li class="hidden-sm">
                                            <a href="https://localhost:44398/Teacher/Index">teacher</a>
                                            
                                        </li>
                                        <li>
                                            <a href="https://localhost:44398/Blog/Index">blog</a>
                                            
                                        </li>
                                        <li><a href="https://localhost:44398/Contact/Index">Contact</a></li>
                                        <li>
                                            <a href="https://localhost:44398/Contact/Index">Buy Now</a>

                                            @if (!User.Identity.IsAuthenticated)
                                            {
                                            <li><a class="btn btn-primary" style="width:78px;height:40px;margin-top:10px;text-align:center;display:flex;align-items:center;" asp-controller="User" asp-action="Register">signup</a></li>
                                            <li><a class="btn btn-success" style="width:78px;height:40px;margin-top:10px;text-align:center;display:flex;align-items:center;" asp-controller="User" asp-action="Login">login</a></li>

                                        }
                                        else
                                        {
                                            <li><a class="btn btn-danger" style="width:90px;height:40px;margin-top:10px;text-align:center;display:flex;align-items:center;" asp-controller="User" asp-action="Logout">logout</a></li>
                                        }



                                        </ul>
                                    </nav>
                                </div>
                                <div class="mobile-menu one"></div>
                                <!-- Main Menu End -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Header Area End -->
        <!-- Background Area Start -->
        <section id="slider-container" class="slider-area">
            <div class="slider-owl owl-theme owl-carousel">
                <!-- Start Slingle Slide -->

                @foreach (var item in Model.Sliders)
                {
                    <div class="single-slide item" style="background-image: url(img/slider/@item.Image)">
                        <!-- Start Slider Content -->
                        <div class="slider-content-area">
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-7 col-md-offset-left-5">
                                        <div class="slide-content-wrapper">
                                            <div class="slide-content">
                                                <h3>@item.TitleUp </h3>
                                                <h2>@item.TitleDown </h2>
                                                <p>@item.Desciption </p>
                                                <a class="default-btn" asp-controller="About" asp-action="Index">@item.Button</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Start Slider Content -->
                    </div>
                }

                <!-- End Slingle Slide -->

            </div>
        </section>
        <!-- Background Area End -->
        <!-- Notice Start -->
        <section class="notice-area pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">

                        <div class="notice-left">
                            @foreach (var noticeTitle in Model.NoticeBoards)
                            {
                                <h3>@noticeTitle.Title</h3>
                            }

                            @foreach (var notice in Model.NoticeSchedules)
                            {
                                <div class="single-notice-left mb-25 pb-45">
                                    <h4>@notice.Date</h4>
                                    <p>@notice.Desc </p>
                                </div>
                            }


                        </div>
                    </div>
                    <div class="col-md-6">


                        <div class="notice-right">
                            @foreach (var rightNotice in Model.RightNotices)
                            {
                                <div class="single-notice-right mb-25 pb-10">
                                    <h3>@rightNotice.Title</h3>
                                    <p>@rightNotice.Desc </p>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Notice End -->
        <!-- Choose Start -->


        <section>
            @foreach (var choose in Model.WhyChooses)
            {
                <div class="choose-area pb-85 pt-77" style="background-image: url('../img/choose/@choose.BackgroundImage') !important;">

                    <div class="container">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-left-4">


                                <div class="choose-content text-start">
                                    <h2>@choose.Title</h2>
                                    <p>@choose.DescUp </p>
                                    <p class="choose-option">@choose.DescUp </p>
                                    <a class="default-btn" asp-controller="Course" asp-action="Index">@choose.Button</a>
                                </div>



                            </div>
                        </div>
                    </div>
                </div>
            }
        </section>
        <!-- Choose Area End -->
        <!-- Courses Area Start -->
        <div class="courses-area pt-150 text-center">
            <div class="container">
                <div class="row">
                   
                        <div class="col-12">
                            <div class="section-title">
                                <img src="~/img/icon/section.png" alt="section-title">
                                <h2>COURSES WE OFFER</h2>
                            </div>
                        </div>
                    

                </div>
                <div class="row">
                    @foreach (var card in Model.CourseDetailCards.Take(3))
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="single-course">
                                <div class="course-img">
                                    <a asp-controller="Course" asp-action="Detail" asp-route-id="@card.Id">
                                        <img src="~/img/course/@card.Image" alt="course">
                                        <div class="course-hover">
                                            <i class="fa fa-link"></i>
                                        </div>
                                    </a>
                                </div>
                                <div class="course-content">
                                    <h3><a asp-controller="Course" asp-action="Detail" asp-route-id="@card.Id">@card.Title</a></h3>
                                    <p >@card.Descr.Substring(0,111)</p>
                                    <a class="default-btn" asp-controller="Course" asp-action="Detail" asp-route-id="@card.Id">read more</a>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
        <!-- Courses Area End -->
    
        <!-- Event Area Start -->
        <div class="event-area one text-center pt-140 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title">
                            <img src="img/icon/section.png" alt="section-title">
                            <h2>UPCOMMING EVENTS</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        @foreach (var item in Model.EventDetailCards.Take(4))
                        {
                        <div class="single-event mb-35">

                            <div class="event-date">

                                <h3><a asp-controller="Event" asp-action="Detail"asp-route-id="@item.Id">@item.StartDate.ToString("dd") <span>@item.StartDate.ToString("MMM")</span></a></h3>
                            </div>
                            <div class="event-content text-start">
                                <div class="event-content-left">
                                    <h4><a asp-controller="Event" asp-action="Detail"asp-route-id="@item.Id">@item.Descr</a></h4>
                                    <ul>
                                        <li><i class="fa fa-clock-o"></i>@item.StartDate.ToString("HH:mm") - @item.EndDate.ToString("HH:mm")</li>
                                        <li><i class="fa fa-map-marker"></i>@item.Adress</li>
                                    </ul>
                                </div>
                                <div class="event-content-right">
                                    <a class="default-btn" asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id">join now</a>
                                </div>
                            </div>
                        </div>
                        }
                        

                    </div>
                    <div class="col-lg-6 pt-5 pt-lg-0">
                        @foreach (var item in Model.EventDetailCards.Skip(4).Take(4))
                        {
                            <div class="single-event mb-35">

                                <div class="event-date">

                                    <h3><a asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id">@item.StartDate.ToString("dd") <span>@item.StartDate.ToString("MMM")</span></a></h3>
                                </div>
                                <div class="event-content text-start">
                                    <div class="event-content-left">
                                        <h4><a asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id">@item.Descr</a></h4>
                                        <ul>
                                            <li><i class="fa fa-clock-o"></i>@item.StartDate.ToString("H:mm") - @item.EndDate.ToString("H:mm")</li>
                                            <li><i class="fa fa-map-marker"></i>@item.Adress</li>
                                        </ul>
                                    </div>
                                    <div class="event-content-right">
                                        <a class="default-btn" asp-controller="Event" asp-action="Detail" asp-route-id="@item.Id">join now</a>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
        <!-- Event Area End -->
        <!-- Event Area End -->
        @await Html.PartialAsync("_TestimonialPartialView", Model.Testimonials)
        <!-- Testimonial Area End -->
        <!-- Blog Area Start -->
        <div class="blog-area pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-title text-center">
                            <img src="~/img/icon/section.png" alt="section-title">
                            <h2>LATEST FROM BLOG</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (var blog in Model.BlogDetailCards.Take(3))
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="single-blog">
                                <div class="blog-img">
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id"><img src="~/img/blog/@blog.Image" alt="blog"></a>
                                    <div class="blog-hover">
                                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id"><i class="fa fa-link" ></i></a>
                                    </div>
                                </div>
                                <div class="blog-content">
                                    <div class="blog-top">
                                        <p>@blog.Date <i class="fa fa-comments-o"></i><span style="display:inline"> @blog.CountComment</span> </p>
                                    </div>
                                    <div class="blog-bottom">
                                        <h2><a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">@blog.Desc </a></h2>
                                        <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">Read more </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
        <!-- Blog Area End -->
        <!-- Subscribe Start -->
        @await Component.InvokeAsync("Emails")
        <!-- Subscribe End -->
        <!-- Footer Start -->
        <footer class="footer-area">
            <div class="main-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4 col-md-6">
                            <div class="single-widget pr-60">
                                <div class="footer-logo pb-25">
                                    <a href="~/index.html"><img src="~/img/logo/footer-logo.png" alt="eduhome"></a>
                                </div>
                                <p>I must explain to you how all this mistaken idea of denoung pleure and praising pain was born and give you a coete account of the system. </p>
                                <div class="footer-social">
                                    <ul>
                                        <li><a href="~/https://www.facebook.com/devitems/?ref=bookmarks"><i class="zmdi zmdi-facebook"></i></a></li>
                                        <li><a href="~/https://www.pinterest.com/devitemsllc/"><i class="zmdi zmdi-pinterest"></i></a></li>
                                        <li><a href="~/#"><i class="zmdi zmdi-vimeo"></i></a></li>
                                        <li><a href="~/https://twitter.com/devitemsllc"><i class="zmdi zmdi-twitter"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6">
                            <div class="single-widget">
                                <h3>information</h3>
                                <ul>
                                    <li><a href="~/#">addmission</a></li>
                                    <li><a href="~/#">Academic Calender</a></li>
                                    <li><a href="~/event.html">Event List</a></li>
                                    <li><a href="~/#">Hostel &amp; Dinning</a></li>
                                    <li><a href="~/#">TimeTable</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-6 pt-4 pt-lg-0">
                            <div class="single-widget">
                                <h3>useful links</h3>
                                <ul>
                                    <li><a href="~/course.html">our courses</a></li>
                                    <li><a href="~/about.html">about us</a></li>
                                    <li><a href="~/teacher.html">teachers &amp; faculty</a></li>
                                    <li><a href="~/#">teams &amp; conditions</a></li>
                                    <li><a href="~/event.html">our events</a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 pt-4 pt-lg-0">
                            <div class="single-widget">
                                <h3>get in touch</h3>
                                <p>Your address goes here, Street<br>City, Roadno 785 New York</p>
                                <p>+880  548  986  898  87<br>+880  659  785  658  98</p>
                                <p>info@eduhome.com<br>www.eduhome.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="footer-bottom text-center">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <p>Copyright © <a href="~/index.html">Eduhome</a> 2021. All Right Reserved By <a href="~/https://themeforest.net/user/hastech/portfolio" target="_blank">Hastech.</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Footer End -->

        <script src="~/js/vendor/jquery-3.6.0.min.js"></script>
        <script src="~/js/vendor/jquery-migrate-3.3.2.min.js"></script>
        <script src="~/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/jquery.meanmenu.js"></script>
        <script src="~/js/jquery.magnific-popup.js"></script>
        <script src="~/js/ajax-mail.js"></script>
        <script src="~/js/owl.carousel.min.js"></script>
        <script src="~/js/jquery.mb.YTPlayer.js"></script>
        <script src="~/js/jquery.nicescroll.min.js"></script>
        <script src="~/js/plugins.js"></script>
        <script src="~/js/main.js"></script>
    </body>

